	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.5*"/>
			<ColumnDefinition Width="4*"/>
			<ColumnDefinition Width="0.5*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="4*"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>

			<StackPanel Grid.Column="1" Grid.Row="1" Background="#40454d" HorizontalAlignment="Center" VerticalAlignment="Center">
				<Grid ShowGridLines="True" Margin="40">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="2*"/>
						<RowDefinition Height="2*"/>
						<RowDefinition Height="2*"/>
						<RowDefinition Height="2*"/>
						<RowDefinition Height="2*"/>
						<RowDefinition Height="2*"/>
						<RowDefinition Height="2*"/>
					</Grid.RowDefinitions>

					<TextBlock Foreground="White" FontSize="25" Grid.ColumnSpan="2" Grid.Column="0">Welcome back</TextBlock>
					<TextBlock Foreground="White" FontSize="20" Grid.ColumnSpan="2" Grid.Row="1">Username</TextBlock>
					<TextBlock Foreground="White" FontSize="20" Grid.ColumnSpan="2" Grid.Row="3">Password</TextBlock>
					
					<Button CornerRadius="5" Background="Black" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="1">Token login</Button>
					<Button CornerRadius="5" Background="#6995db" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="1" >Login</Button>
					<TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"></TextBox>
					<TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"></TextBox>
				</Grid>
			</StackPanel>
			</Grid>
